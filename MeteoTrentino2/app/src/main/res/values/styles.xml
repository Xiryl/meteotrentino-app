<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bgColor">#FAFAFA</item>
        <item name="textColor">#000000</item>
        <item name="bgSearchbarColor">#FFFFFF</item>
        <item name="textColorSearchBar">#1E1E1E</item>
        <item name="iconsColor">#1E1E1E</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyleLight</item>

    </style>

    <style name="mySpinnerItemStyleLight" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>
    <style name="mySpinnerItemStyleDArk" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bgColor">#121212</item>
        <item name="textColor">#FAFAFA</item>
        <item name="bgSearchbarColor">#424242</item>
        <item name="textColorSearchBar">#FAFAFA</item>
        <item name="iconsColor">#FAFAFA</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyleDArk</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/MyRoundedFragment</item>
    </style>

    <style name="MyRoundedFragment"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_fragment</item>
    </style>

    <style name="PrefThemeDark" parent="AppThemeDark">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#FFFFFF</item>

        <item name="android:textColor">#FFFFFF</item>
        <item name="android:summary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>

</resources>
